<idea-plugin>
    <id>org.bigtows.PinNote</id>
    <name>PinNote</name>
    <version>{PATCHED_FROM_GRADLE}</version>
    <vendor email="gasfull98@gmail.com" url="http://github.com/BigTows/PinNote">Alexander Chapchuk</vendor>
    <description><![CDATA[
        A PinNote is a way to write notes in IDE by JetBrains.<br>
        Now supported:
          <ul>
             <li>Store your notes in <a href="https://evernote.com">Evernote</a>.</li>
             <li>Sync notes between many instance IDE.</li>
             <li>The opportunity to share notes on target.
                <ul>
                    <li>Support for SubTasks.</li>
                </ul>
             </li>
          </ul>
          <br>
          <a href="https://github.com/BigTows/PinNote">GitHub</a>
          <br>
          <p>Created by: Alexander Chapchuk @BigTows<p>
    ]]></description>

    <extensions defaultExtensionNs="com.intellij">
        <!-- <applicationConfigurable instance="org.bigtows.window.SettingsWindow"/>-->
        <toolWindow id="PinNote" icon="/icons/toolWindowRight.svg" anchor="right"
                    factoryClass="org.bigtows.window.RightToolWindowFactory" doNotActivateOnStart="true"/>
        <applicationConfigurable groupId="tools" displayName="PinNote" id="preferences.PinNote"
                                 instance="org.bigtows.window.SettingsWindow"/>
        <projectService serviceImplementation="org.bigtows.component.json.GoonBasedJsonParser"
                        serviceInterface="org.bigtows.component.json.JsonParser">
        </projectService>
        <projectService serviceImplementation="org.bigtows.service.PinNoteService">
        </projectService>


        <projectService serviceImplementation="org.bigtows.service.note.repository.SimpleNotebookRepository"
                        serviceInterface="org.bigtows.service.note.repository.NotebookRepository"/>

        <projectService
                serviceImplementation="org.bigtows.service.note.notebook.evernote.creadential.EvernoteNotebookAccessibleImpl"
                serviceInterface="org.bigtows.service.note.notebook.evernote.creadential.EvernoteNotebookAccessible"/>

        <projectService serviceImplementation="org.bigtows.service.note.notebook.evernote.EvernoteNotebook"/>




        <applicationService serviceImplementation="org.bigtows.component.property.PropertyStorage"/>
    </extensions>
    <depends>com.intellij.modules.lang</depends>
    <actions>
    </actions>
    <applicationListeners>

    </applicationListeners>
    <application-components>
        <!--  <component>
           &lt;!&ndash;   <implementation-class>org.bigtows.components.PinNoteNotification</implementation-class>&ndash;&gt;
          </component>-->
    </application-components>
</idea-plugin>